<div class="paper-back-full">
  <div class="login-form-full">
    <div class="fix-box">
      <div class="text-center title-logo">business<span>bites</span></div>
      <div class="transparent-div no-padding">
        <ul class="nav nav-tabs nav-tabs-transparent">
          <li class="active"><a href="#home" data-toggle="tab">Cambiar Contrase単a</a></li>
        </ul>
        <!-- Tab panes -->
        <div class="tab-content">
          <div class="tab-pane active" id="home">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>
              <%= f.hidden_field :reset_password_token %>
              <div class="field form-group input-group login-input">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Ingresar nueva contrase単a" %>
              </div>
              <div class="field form-group input-group login-input">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>                
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmar nueva contrase単a" %>
              </div>
              <div class="actions form-group">
                <%= f.submit "Cambiar mi contrase単a", class: "btn btn-ar btn-primary pull-right btn-lg" %>
              </div>
            <% end %>        
            <%= render "devise/shared/links" %>
          </div>            
        </div>
      </div>
    </div>
  </div>
</div>
