<%= form_for @user, :url => user_index_path do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="field form-group">
        <%= f.label :name, "Nombre", class: "lead lead-lg" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="field form-group">
      	<%= f.label :email, class: "lead lead-lg" %>
      	<%= f.text_field :email, class: "form-control", id: "new_user_email" %>
     	</div>

    	<div class="field form-group">
    		<%= f.label :role, "Rol para este usuario", class: "lead lead-lg" %><br />
    		<%= f.select :role, options_for_select(User.roles.map {|k,v| [k.humanize,k]}, @user.role), {}, { :class => "form-control" } %>
    	</div>

      <div class="field form-group">
        <%= f.label :image, "Foto de perfil", class: "lead lead-lg" %>
        <%= f.file_field :image, class: "form-control" %>
      </div>

      <div class="field form-group">
      	<%= f.label :password, "Contrase침a", class: "lead lead-lg"  %>
      	<%= f.password_field :password, class: "form-control", id: "password" %>
    	</div>

      <div class="field form-group">
      	<%= f.label :password_confirmation, "Confirmar Contrase침a", class: "lead lead-lg"  %>
      	<%= f.password_field :password_confirmation, class: "form-control", id: "password_confirmation" %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="field form-group">
      <h3 class="right-line">SELECCIONE CURSOS PARA ESTE USUARIO</h3>
      <% if Course.all.empty? %>
        <h3 class="text-center">No hay cursos almacenados, porfavor dirijase a la pesta침a Gesti칩n de Cursos para crear nuevos registros</h3>
      <% else %>
        <% Course.all.each do |course| %>
          <div class="col-md-4">
            <%= hidden_field_tag "user[course_ids][]", nil %>      
            <%= check_box_tag "user[course_ids][]", course.id, @user.course_ids.include?(course.id), id: dom_id(course) %>
            <%= label_tag dom_id(course), course.title %></br>      
          </div>
        <% end %>
      <% end %>      
    </div>
  </div>
  
  <div class="actions form-group text-center">
  	<%= f.submit "Guardar Usuario", class: "btn btn-ar btn-lg btn-success" %>
  </div>
<% end %>