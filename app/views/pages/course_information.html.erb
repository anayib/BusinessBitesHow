    padding-bottom:4em;
  }

  div#course_information_text {
    margin-top: 50px;
  }
  #course_information_text{
    padding-bottom:3em;
  }
  div#course_information_text h1#course_information_title{
    /*margin-bottom: 60px;*/
    margin-top: 2em;
    /*padding-bottom:2em;*/
    font-size: 60px;
    color: white;
    /*color: #595959;*/
    font-weight: bold;
  }

  .vcenter {
    display: inline-block;
    vertical-align: middle;
    float: none;
  }

  div#teacher_course:first-child {
    margin-top: -130px;
  }

  div#teacher_course:not(:first-child) {
    margin-top: 50px;
    margin-bottom: 50px;
  }

  div#teacher_information {
    background-color: rgba(128, 128, 128, 0.4);
    border-radius: 15px;
  }
  div#teacher_information h2{
    font-weight: bold;
    font-size: 35px;
  }
  div#teacher_information p{
    font-weight: bold;
    color: white;
  }
  div#first_topic_video {
    margin-top: 50px;
  }
  h3#course_title {
    font-size: 25px;
    font-weight: bold;
  }

  @media all and (max-width: 460px) {
    a#payed_call_to_action {
      font-size: 11px;      
    }

    div#course_information_text h1#course_information_title{
      font-size: 25px;
    }

    a.cta_button {
      font-size: 12px;
    }
  }

  @media (min-width: 461px) and (max-width:720px) {
    a#payed_call_to_action {
      font-size: 13px;      
    }

    div#course_information_text h1#course_information_title{
      font-size: 35px;
    }

    a.cta_button {
      font-size: 14px;
    }
  }

  @media (min-width: 721px) and (max-width:920px) {
    a#payed_call_to_action {
      font-size: 16px;      
    }

    div#course_information_text h1#course_information_title{
      font-size: 45px;
    }

    a.cta_button {
      font-size: 17px;
    }
  }

</style>
