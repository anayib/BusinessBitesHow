<div class="container">
  <div class="row grid">
    <% @courses.each do |course| %>
      <div class="col-sm-6 col-md-4 col-xs-12 <% course.categories.each do |c| %><%= " " + c.name.downcase.gsub(' ','-') %><% end %>">
        <div class="thumbnail" style="background-color: #17375E;">
          <% if course.new_course %>
            <span class="discount text-center">NUEVA</span>
          <%elsif course.course_type == "free"%> 
            <span class="discount-dos text-center">GRATIS</span>
          <% end %>

          <!-- <img src="<%= course.image.url(:medium) %>" alt="..." class="thumbnail_custom_image"> -->
          <div class="caption">
            <h3 class="course_title" style="text-align:center;color:white"><%= course.title %></h3>
          </div>
          <div class="row course-caption">
            <% if user_signed_in? && (current_user.user? || current_user.admin? || current_user.content_manager?) %>
              <% if course.free? %>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                  <center><%= link_to 'Leer la guía', course, id:"CTALeerEstrategiaThumbnail", class: "btn btn-ar btn-primary btn-responsive-thumbnail", style:"margin-top: -90px" %></center>
                </div>
              <% else %>
                <!-- <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6 text-center instructor-info">
                </div> -->
                
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                  <center><%= link_to 'Ver guía', course_information_path(:course_id => course.id), id:"CTAVerEstrategiaThumbnail" , class: "btn btn-ar btn-view-course btn-responsive-thumbnail", style:"margin-top: -90px"%></center>
                </div>
                
              <% end %>
            <% elsif user_signed_in? && (current_user.vip_user? || current_user.guest?) %>
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center instructor-info">
              </div>
              
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                <center><%= link_to 'Leer la guía', course, id:"CTALeerEstrategiaThumbnail", class: "btn btn-ar btn-primary btn-responsive-thumbnail", style:"margin-top: -90px" %></center>
              </div>
              </center>
            <% else %>
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center instructor-info"></div>
             
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                 <center><%= link_to 'Ver guía', course_information_path(:course_id => course.id), id:"CTAVerEstrategiaThumbnail", class: "btn btn-ar btn-view-course btn-responsive-thumbnail", style:"margin-top: -90px"%> </center>
              </div>
             
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  /* portfolio mixitup */
  $(document).on("ready page:load", function() {
    var $container = $('.grid');
    $container.isotope({
        filter: '*',
        animationOptions: {
            duration: 750,
            easing: 'linear',
            queue: false
        }
    });
 
    $('.grid-controls li a').click(function(){
        $('.grid-controls .current').removeClass('current');
        $(this).addClass('current');
 
        var selector = $(this).attr('data-filter');
        $container.isotope({
            filter: selector,
            animationOptions: {
                duration: 750,
                easing: 'linear',
                queue: false
            }
         });
         return false;
    });

    $("a.filter").click(function() {
      $("#dropdownMenu1").dropdown("toggle");
      $("span.option-selected").text($(this).text());
    });
});
</script>


