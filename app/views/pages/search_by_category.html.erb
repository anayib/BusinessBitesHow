<div class="container-fluid" id="search_header">
	<div class="row">
		<div class="col-md-12 text-center">
			<h3 id="search_title">Escoge una de las siguientes categorias en la lista</h3>
			<h1 class="dropdown-text">Quiero aprender de: 
				<div class="dropdown" id="categories_dropdown">
				  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
				    todo
				    <span class="caret"></span>
				  </button>
				  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
				  	<% @categories.each do |categorie| %>
							<li><%= link_to categorie.name.camelize(:lower), "#" %></li>
				  	<% end %>
				  </ul>
				</div>
			</h1>
		</div>
	</div>
</div>

<% @courses.each do |course| %>
  <div class="col-sm-6 col-md-4 col-xs-12">
    <div class="thumbnail">
      <% if course.new_course %>
        <span class="discount text-center">NUEVA</span>
      <% end %>
      <img src="<%= course.image.url(:medium) %>" alt="..." class="thumbnail_custom_image">
      <div class="caption">
        <h3 class="course_title"><%= course.title %></h3>
        <p class="text-justify" id="course_description"><%= course.description %></p>
      </div>
      <div class="row course-caption">
        <% if user_signed_in? && (current_user.user? || current_user.admin? || current_user.content_manager?) %>
          <% if course.free? %>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6 text-center instructor-info">
              <span class="text-center">Basado en:</span><br>
              <% if !course.instructors.blank? %>
                <%= image_tag(course.instructors.first.image.url(:thumb), class: "instructor-image") %>
                <%= course.instructors.first.name %>
              <% end %>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-left">
              <%= link_to 'Ir a la guía', course, class: "btn btn-ar btn-primary btn-responsive-thumbnail" %>
            </div>
          <% else %>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6 text-center instructor-info">
              <span>Basado en:</span><br>
              <% if !course.instructors.blank? %>
                <%= image_tag(course.instructors.first.image.url(:thumb), class: "instructor-image") %>
                <%= course.instructors.first.name %>
              <% end %>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-left">
              <%= link_to 'Ver Guía', course_information_path(:course_id => course.id), class: "btn btn-ar btn-view-course btn-responsive-thumbnail" %>
            </div>
          <% end %>
        <% elsif user_signed_in? && (current_user.vip_user? || current_user.guest?) %>
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6 text-center instructor-info">
            <span>Basado en:</span><br>
            <% if !course.instructors.blank? %>
              <%= image_tag(course.instructors.first.image.url(:thumb), class: "instructor-image") %>
              <%= course.instructors.first.name %>
            <% end %>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-left">
            <%= link_to 'Ir a la guía', course, class: "btn btn-ar btn-primary btn-responsive-thumbnail" %>
          </div>
        <% else %>
          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6 text-center instructor-info">
            <span>Basado en:</span><br>
            <% if !course.instructors.blank? %>
              <%= image_tag(course.instructors.first.image.url(:thumb), class: "instructor-image") %>
              <%= course.instructors.first.name %>
            <% end %>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-left">
            <%= link_to 'Ver Guía', course_information_path(:course_id => course.id), class: "btn btn-ar btn-view-course btn-responsive-thumbnail" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<style>
	div#search_header {
		background-color: #f6f6f6;
		height: 150px;
		margin-bottom: 30px;
	}

	h1.dropdown-text {
		color: #666!important;
		font-weight: bold;
	}
	h3#search_title {
		font-weight: 300;
	}
	div#categories_dropdown {
		display: inline-block;
	}
</style>