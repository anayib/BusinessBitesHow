<div class="container-fluid" id="search_header">
	<div class="row">
		<div class="col-md-12 text-center">
			<h3 id="search_title">Escoge una de las siguientes categorias en la lista</h3>
			<h1 class="dropdown-text">Quiero aprender de:
				<div class="dropdown" id="categories_dropdown">
				  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
				    <span class="option-selected">Escoje una categoría</span>
				    <span class="caret"></span>
				  </button>
				  <ul class="dropdown-menu grid-controls" aria-labelledby="dropdownMenu1">
				  	<li><a class="filter" href="#" data-filter="*">Todo</a></li>
				  	<% @categories.each do |categorie| %>
							<li><a class="filter" href="#" data-filter=".<%= categorie.name %>"><%= categorie.name %></a></li>
				  	<% end %>
				  </ul>
				</div>
			</h1>
		</div>
	</div>
</div>

<div class="container">
	<div class="row grid">
		<% @courses.each do |course| %>
		  <div class="col-sm-6 col-md-4 col-xs-12 <% course.categories.each do |c| %><%= c.name + " " %><% end %>">
		    <div class="thumbnail">
		      <% if course.new_course %>
		        <span class="discount text-center">NUEVA</span>
		      <% end %>
		      <img src="<%= course.image.url(:medium) %>" alt="..." class="thumbnail_custom_image">
		      <div class="caption">
		        <h3 class="course_title"><%= course.title %></h3>
		        <p class="text-justify" id="course_description"><%= course.description %></p>
		      </div>
		      <div class="row course-caption">
		        <% if user_signed_in? && (current_user.user? || current_user.admin? || current_user.content_manager?) %>
		          <% if course.free? %>
		            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6 text-center instructor-info">
		              <span class="text-center">Basado en:</span><br>
		              <% if !course.instructors.blank? %>
		                <%= image_tag(course.instructors.first.image.url(:thumb), class: "instructor-image") %>
		                <%= course.instructors.first.name %>
		              <% end %>
		            </div>
		            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-left">
		              <%= link_to 'Ir a la guía', course, class: "btn btn-ar btn-primary btn-responsive-thumbnail" %>
		            </div>
		          <% else %>
		            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6 text-center instructor-info">
		              <span>Basado en:</span><br>
		              <% if !course.instructors.blank? %>
		                <%= image_tag(course.instructors.first.image.url(:thumb), class: "instructor-image") %>
		                <%= course.instructors.first.name %>
		              <% end %>
		            </div>
		            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-left">
		              <%= link_to 'Ver Guía', course_information_path(:course_id => course.id), class: "btn btn-ar btn-view-course btn-responsive-thumbnail" %>
		            </div>
		          <% end %>
		        <% elsif user_signed_in? && (current_user.vip_user? || current_user.guest?) %>
		          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6 text-center instructor-info">
		            <span>Basado en:</span><br>
		            <% if !course.instructors.blank? %>
		              <%= image_tag(course.instructors.first.image.url(:thumb), class: "instructor-image") %>
		              <%= course.instructors.first.name %>
		            <% end %>
		          </div>
		          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-left">
		            <%= link_to 'Ir a la guía', course, class: "btn btn-ar btn-primary btn-responsive-thumbnail" %>
		          </div>
		        <% else %>
		          <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6 text-center instructor-info">
		            <span>Basado en:</span><br>
		            <% if !course.instructors.blank? %>
		              <%= image_tag(course.instructors.first.image.url(:thumb), class: "instructor-image") %>
		              <%= course.instructors.first.name %>
		            <% end %>
		          </div>
		          <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-left">
		            <%= link_to 'Ver Guía', course_information_path(:course_id => course.id), class: "btn btn-ar btn-view-course btn-responsive-thumbnail" %>
		          </div>
		        <% end %>
		      </div>
		    </div>
		  </div>
		<% end %>
	</div>
</div>

<script>
	/* portfolio mixitup */
	$(document).on("ready page:load", function() {
    var $container = $('.grid');
    $container.isotope({
        filter: '*',
        animationOptions: {
            duration: 750,
            easing: 'linear',
            queue: false
        }
    });
 
    $('.grid-controls li a').click(function(){
        $('.grid-controls .current').removeClass('current');
        $(this).addClass('current');
 
        var selector = $(this).attr('data-filter');
        $container.isotope({
            filter: selector,
            animationOptions: {
                duration: 750,
                easing: 'linear',
                queue: false
            }
         });
         return false;
    });

    $("a.filter").click(function() {
		  $("#dropdownMenu1").dropdown("toggle");
		  $("span.option-selected").text($(this).text());
		});
});
</script>