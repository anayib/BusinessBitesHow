<div id="sb-site">
<div class="boxed">

<div class="wrap-primary">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <!-- 16:9 aspect ratio -->
        <div class="embed-responsive embed-responsive-4by3" id="video_home_embed">
          <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/bk6Xst6euQk?wmode=transparent"></iframe>
        </div>
      </div>
      <div class="col-md-6 text-center" id="header_container">
        <h1 class="head-title">HEADER</h1>
        <h2 class="secondary-color text-center head-subtitle">Sub-Header</h2>
        <% if !user_signed_in? %>
          <%= link_to 'ACCEDE A TODOS LAS GUÍAS DESDE 19.99 DÓLARES', new_user_registration_path(:subscription => true), class: "call-to-action" %>   
        <% elsif user_signed_in? && current_user.subscription.nil? %>
          <%= link_to 'ACCEDE A TODOS LAS GUÍAS DESDE 19.99 DÓLARES', new_subscription_path(:subscription => true), class: "call-to-action" %>          
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <section class="margin-bottom" id="user-courses">
    <div class="row">
      <div class="col-md-12">
          <h2 class="right-line">TODAS LAS GUÍAS</h2>
      </div>

      <% @courses.each do |course| %>
        <div class="col-sm-6 col-md-4 col-xs-12">
          <div class="thumbnail">
            <img src="<%= course.image.url(:medium) %>" alt="..." class="thumbnail_custom_image">
            <div class="caption">
              <h3 class="course_title"><%= course.title %></h3>
              <p class="text-justify" id="course_description"><%= course.description %></p>
            </div>
            <div class="row course-caption">
              <% if user_signed_in? && (current_user.user? || current_user.admin? || current_user.content_manager?) %>
                <% if course.free? %>
                  <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6 text-center instructor-info">
                    <span class="text-center">Basado en:</span><br>
                    <% if !course.instructors.blank? %>
                      <%= image_tag(course.instructors.first.image.url(:thumb), class: "instructor-image") %>
                      <%= course.instructors.first.name %>
                    <% end %>
                  </div>
                  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-left">
                    <%= link_to 'Ir a la guía', course, class: "btn btn-ar btn-primary btn-responsive-thumbnail" %>
                  </div>
                <% else %>
                  <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6 text-center instructor-info">
                    <span>Basado en:</span><br>
                    <% if !course.instructors.blank? %>
                      <%= image_tag(course.instructors.first.image.url(:thumb), class: "instructor-image") %>
                      <%= course.instructors.first.name %>
                    <% end %>
                  </div>
                  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-left">
                    <%= link_to 'Ver Guía', course_information_path(:course_id => course.id), class: "btn btn-ar btn-view-course btn-responsive-thumbnail" %>
                  </div>
                <% end %>
              <% elsif user_signed_in? && current_user.vip_user? %>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6 text-center instructor-info">
                  <span>Basado en:</span><br>
                  <% if !course.instructors.blank? %>
                    <%= image_tag(course.instructors.first.image.url(:thumb), class: "instructor-image") %>
                    <%= course.instructors.first.name %>
                  <% end %>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-left">
                  <%= link_to 'Ir a la guía', course, class: "btn btn-ar btn-primary btn-responsive-thumbnail" %>
                </div>
              <% else %>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6 text-center instructor-info">
                  <span>Basado en:</span><br>
                  <% if !course.instructors.blank? %>
                    <%= image_tag(course.instructors.first.image.url(:thumb), class: "instructor-image") %>
                    <%= course.instructors.first.name %>
                  <% end %>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6 text-left">
                  <%= link_to 'Ver Guía', course_information_path(:course_id => course.id), class: "btn btn-ar btn-view-course btn-responsive-thumbnail" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div> <!-- row -->
  </section>
</div>
