<script>
  /* portfolio mixitup */
  $(document).on("ready page:load", function() {
    var $container = $('.grid');
    $container.isotope({
        filter: '*',
        animationOptions: {
            duration: 750,
            easing: 'linear',
            queue: false
        }
    });
 
    $('.grid-controls li a').click(function(){
        $('.grid-controls .current').removeClass('current');
        $(this).addClass('current');
 
        var selector = $(this).attr('data-filter');
        $container.isotope({
            filter: selector,
            animationOptions: {
                duration: 750,
                easing: 'linear',
                queue: false
            }
         });
         return false;
    });

    $("a.filter").click(function() {
      $("#dropdownMenu1").dropdown("toggle");
      $("span.option-selected").text($(this).text());
    });
});
</script>


