<div class="container">
  <section class="margin-bottom" id="user-courses">
    <div class="row">
      <div class="col-md-12">
          <h2 class="right-line">MIS CURSOS</h2>
      </div>

      <% @courses.each do |course| %>
        <div class="col-sm-3 col-md-4">
          <div class="thumbnail">
            <img src="<%= course.image.url(:medium) %>" alt="..." class="thumbnail_custom_image">
            <div class="caption">
              <h3 class="course_title"><%= course.title %></h3>
              <p class="text-justify" id="course_description"><%= course.description %></p>                              
            </div>
            <div class="row course-caption">
              <% if user_signed_in? %>                  
                <% if current_user.courses.include?(course) %>
                  <div class="col-sm-3">
                    <%= link_to 'Ir al curso', course, class: "btn btn-ar btn-primary" %>
                  </div>
                  <div class="col-md-8 col-md-offset-1 col-sm-9 text-right">
                    <%= image_tag(course.instructors.first.image.url(:thumb), class: "instructor-image") %>
                    <%= course.instructors.first.name %>
                  </div>
                <% else %>
                  <div class="col-sm-3">
                  <%= link_to 'Ver Curso', course_information_path(:course_id => course.id), class: "btn btn-ar btn-warning" %>
                </div>
                <div class="col-md-8 col-md-offset-1 col-sm-9 text-right">
                  <%= image_tag(course.instructors.first.image.url(:thumb), class: "instructor-image") %>
                  <%= course.instructors.first.name %>
                </div>
                <% end %>
              <% else %>
                <div class="col-sm-3">
                  <%= link_to 'Ver curso', course_information_path(:course_id => course.id), class: "btn btn-ar btn-warning" %>
                </div>
                <div class="col-md-8 col-md-offset-1 col-sm-9 text-right">
                  <%= image_tag(course.instructors.first.image.url(:thumb), class: "instructor-image") %>
                  <%= course.instructors.first.name %>
                </div>                 
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

    </div> <!-- row -->
  </section>
</div>