<aside id="footer-widgets">
  <div class="container">
    <div class="row">
			<div class="footer-widget">
        <h3 class="footer-widget-title">Guías Recientes</h3>
				<% @footer_courses.each do |course| %>
					<div class="col-md-4">
	          <div class="media">
							<% if user_signed_in? %>
							  <% if course.free? %>
							    <%= link_to image_tag(course.image.url(:thumb)), course, class: "pull-left footer-thumb-mask" %>
    	            <div class="media-body">
                  	<h4 class="media-heading"><%= link_to course.title, course %></h4>
                  	<!-- <small><%= course.created_at.strftime("%d %b. %Y") %></small> -->
                	</div>
							  <% else %>
							  	<%= link_to image_tag(course.image.url(:thumb)), course_information_path(:course_id => course.id), class: "pull-left footer-thumb-mask" %>
  		            <div class="media-body">
  	              	<h4 class="media-heading"><%= link_to course.title, course_information_path(:course_id => course.id) %></h4>
  	              	<!-- <small><%= course.created_at.strftime("%d %b. %Y") %></small> -->
  	            	</div>
							  <% end %>
							<% else %>
							  <%= link_to image_tag(course.image.url(:thumb)), course_information_path(:course_id => course.id), class: "pull-left footer-thumb-mask" %>
  	            <div class="media-body">
                	<h4 class="media-heading"><%= link_to course.title, course_information_path(:course_id => course.id) %></h4>
                	<!-- <small><%= course.created_at.strftime("%d %b. %Y") %></small> -->
              	</div>
							<% end %>
          	</div>
        	</div>
				<% end %>
			</div>
    </div> <!-- row -->
  </div> <!-- container -->
</aside> <!-- footer-widgets -->
