<div class="container">
  <section class="margin-bottom">
    <div class="row">
      <div class="col-md-12">
        <h2 class="right-line">LISTADO DE INSTRUCTORES REGISTRADOS</h2>
      </div>			
			<% @instructors.each do |instructor| %>
				<div class="col-sm-6 col-md-3">
				  <div class="thumbnail">
				    <img src="<%= instructor.image.url(:medium) %>" alt="..." class="thumbnail_custom_image">
				    <div class="caption">
				      <h3><%= instructor.name %></h3>
				      <p><%= instructor.background %></p>
				      <p><%= link_to "Editar", edit_instructor_path(instructor), class: "btn btn-ar btn-warning" %> <%= link_to instructor_path(instructor), method: :delete, data: { confirm: 'Â¿Esta seguro que desea elminar esta usuario?' }, class: "btn btn-ar btn-danger" do %><span>Eliminar</span><% end %>
				    </div>
				  </div>
				</div>
			<% end %>
    </div> <!-- row -->
    <div class="row">
			<div class="col-md-6 text-center col-md-offset-3" id="btn-new-user">
				<%= link_to "Crear Un Nuevo Instructor", new_instructor_path, class: "btn btn-lg btn-ar btn-success" %>
			</div>
		</div>
  </section>
</div>